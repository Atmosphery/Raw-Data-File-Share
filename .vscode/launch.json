{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "Backend/main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "type": "node-terminal",
            "name": "Launch Frontend",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}\\Frontend\\myapp"
        }
    ]
}